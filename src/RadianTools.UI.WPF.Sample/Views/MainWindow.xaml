<Window
    x:Class="RadianTools.UI.WPF.Sample.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RadianTools.UI.WPF.Controls;assembly=RadianTools.UI.WPF"
    xmlns:vm="clr-namespace:RadianTools.UI.WPF.Sample.ViewModels"
    Title="RadianTools.UI.WPF.Sample"
    Width="450"
    Height="400">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  RootMode="DesktopVirtualFolders"(または指定無し)だと、ルートはエクスプローラー風の仮想フォルダを表示する。  -->
        <!--  RootMode="LogicalDrives" を指定すると、ルートは物理ドライブを表示する。  -->
        <controls:FolderTreeView
            x:Name="folderTreeView"
            Grid.Row="0"
            RootMode="DesktopVirtualFolders"
            SelectedItem="{Binding SelectedItem}"
            SelectedTreePath="{Binding SelectedTreePath}" />

        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Right" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Margin" Value="0,0,10,0" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="TreePath" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                IsReadOnly="True"
                Text="{Binding SelectedTreePath}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="FilePath" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                IsReadOnly="True"
                Text="{Binding SelectedItem.FilePath, Mode=OneWay}" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Click="ButtonSetItem_Click"
                Content="SelectItemFromFilePath" />
            <TextBox
                x:Name="textSetFilePath"
                Grid.Row="2"
                Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
